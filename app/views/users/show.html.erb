<table class="profile" summary="Profile information">
  <tr>
    <td class="main">
      <h2>
        <%= gravatar_for @user, :size => 60 %>
        <%= @user.email %>
      </h2>
    </td>
    <td class="sidebar round">
      <strong>Name</strong> <%= @user.name %><br />
      <strong>URL</strong>  <%= link_to user_url(@user), @user %>
    </td>
  </tr>
</table>

